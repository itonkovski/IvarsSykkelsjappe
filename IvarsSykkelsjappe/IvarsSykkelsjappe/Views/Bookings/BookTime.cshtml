<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Make a booking at our Workshop</h2>
            <form method="post">
              <div class="form-group">
                <label>Full Name</label>
                <input class="form-control" placeholder="FullName">
                <span class="small text-danger"></span>
              </div>
              <div class="form-group">
                <label>Email address</label>
                <input type="email" class="form-control" placeholder="john.doe@email.com" required>
                <span class="small text-danger"></span>
              </div>
              <div class="form-group">
                <label>Your phone number</label>
                <input type="tel" class="form-control" placeholder="+47 955 55 955" required>
                <span class="small text-danger"></span>
              </div>
              <hr>
              <div class="form-group">
                <label>Book-in Date</label>
                <input type="date" class="form-control" required>
              </div>
              <hr>
              <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" rows="5" placeholder="Tell us anything else that might be important." required></textarea>
                <span class="small text-danger"></span>
              </div>
              <hr>
              <div class="form-group">
                <label>Image</label>
                <input class="form-control" placeholder="Upload an image">
                <span class="small text-danger"></span>
              </div>
              <hr>
              <div class="form-group text-center">
                <div class="button-holder">
                    <a href="/Bookings/AddUserToBooking?bookingId=Id" class="btn btn-primary btn-block text-uppercase">Book</a>
                </div>
            </div>
            </form>
    </div>
</div>