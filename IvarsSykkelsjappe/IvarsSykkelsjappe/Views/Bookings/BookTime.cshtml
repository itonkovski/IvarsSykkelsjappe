@model BookingFormModel
@{
    ViewData["Title"] = "Book appointment";
}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Make a booking at our Workshop</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="FullName">Full name</label>
                <input asp-for="FullName" class="form-control" placeholder="John Doe">
                <span asp-validation-for="FullName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email address</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="john.doe@email.com" required>
                <span asp-validation-for="Email" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Your phone number</label>
                <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="+47 955 55 955" required>
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>
            <hr>
            <div class="form-group">
                <label asp-for="TimeSlot">Book-in Date</label>
                <input asp-for="TimeSlot" type="date" class="form-control" required>
                <span asp-validation-for="TimeSlot" class="small text-danger"></span>
            </div>
            <hr>
            <div class="form-group">
                <label asp-for="Details">Description</label>
                <textarea asp-for="Details" class="form-control" rows="5" placeholder="Tell us something else that might be important." required></textarea>
                <span asp-validation-for="Details" class="small text-danger"></span>
            </div>
            <hr>
            <div class="form-group">
                <input asp-for="Agreements">
                <label asp-for="Agreements">I agree with the terms and conditions.</label>
                <span asp-validation-for="Agreements" class="small text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block text-uppercase">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}