@model BikeDetailsViewModel
<section class="py-5">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h1 style="margin: 2%; text-align: center;">@Model.Brand (@Model.Model - @Model.Year)</h1>
        <div>
            <div class="form-group text-center">
                <img src="@Model.ImageUrl" class="img-fluid">
            </div>
            <div class="form-group">
                <label asp-for="Brand">Brand</label>
                <input asp-for="Brand" readonly class="form-control">
                <span asp-validation-for="Brand" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model">Model</label>
                <input asp-for="Model" readonly class="form-control">
                <span asp-validation-for="Model" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price">Price</label>
                <input asp-for="Price" readonly class="form-control">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year">Year</label>
                <input asp-for="Year" readonly class="form-control">
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BikeCategory">Category</label>
                <input asp-for="BikeCategory" readonly class="form-control">
                <span asp-validation-for="BikeCategory" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" readonly class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group text-center">
                <div class="button-holder">
                    <a href="/Bikes/AddUserToBike?bikeId=Id" class="btn btn-primary btn-block text-uppercase">Add To Cart</a>
                </div>
            </div>
        </div>
    </div>
</section>