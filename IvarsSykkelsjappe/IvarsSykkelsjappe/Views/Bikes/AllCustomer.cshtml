@model AllBikesQueryModel
@{
    ViewData["Title"] = "Our Bikes";
}
<form method="get">
    <div class="row">
        <div class="form-group text-center col-md-4">
            <div class="form-group">
                <label asp-for="Brand"></label>
                <select asp-for="Brand" class="form-control">
                    <option value="">All</option>

                    @foreach (var brand in Model.Brands)
                    {
                        <option value="@brand">@brand</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group text-center col-md-4">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control mb-3" placeholder="Brand and Model">
            <input type="submit" class="btn btn-primary col-md-4 center" value="Select">
        </div>

        <div class="form-group text-center col-md-4">
            <div class="form-group">
                <label asp-for="Sorting"></label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>Sort by year</option>
                    <option value="1">Sort by brand and model</option>
                </select>
            </div>
        </div>

    </div>
</form>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalBikes / AllBikesQueryModel.BikesPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Bikes"
           asp-action="Review"
           asp-route-currentPage="@previousPage"
           asp-route-brand="@Model.Brand"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)"><<</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary float-right @(Model.CurrentPage == maxPage ? "disabled" : string.Empty)"
           asp-controller="Bikes"
           asp-action="Review"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-brand="@Model.Brand"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">>></a>
    </div>
</div>

@if (!Model.Bikes.Any())
{
    <h2 class="text-center">No bikes were found by the given criteria!</h2>
}

<div class="row">
    @foreach (var bike in Model.Bikes)
    {
        <div class="col-md-4">
            <div class="card image-Car mb-3">
                <img class="card-img-top" src="@bike.ImageUrl" alt="@bike.Brand @bike.Model (@bike.BikeCategory)">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@bike.Brand (@bike.Model - @bike.Year)</h5>
                    <a asp-controller="Bikes" asp-action="Details" asp-route-id="@bike.Id" class="btn btn-primary">Select</a>
                </div>
            </div>
        </div>
    }
</div>