@model IEnumerable<BikeViewModel>
@{
    ViewData["Title"] = "All available Custome bikes:";
}
<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Our bikes are unique and made to individual order</h1>
        <div style="padding: 5%;">
            <table class="table">
                <thead class="thead-dark" align="center">
                    <tr>
                        <th scope="col">Brand</th>
                        <th scope="col">Model</th>
                        <th scope="col">Price</th>
                        <th scope="col">Year</th>
                        <th scope="col">Category</th>
                        <th scope="col">Details</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody align="center">
                    @foreach (var bike in Model)
                    {
                    <tr align="center">
                        <th scope="row">@bike.Brand</th>
                        <td>@bike.Model</td>
                        <td>@bike.Price</td>
                        <td>@bike.Year</td>
                        <td>@bike.BikeCategory</td>
                        <td>
                            <div class="button-holder">
                                <a asp-controller="Bikes" asp-action="Details" asp-route-id="@bike.Id" class="btn btn-info text-uppercase">Info</a>
                            </div>
                        </td>
                        <td>
                            <div class="button-holder">
                                <a asp-controller="Bikes" asp-action="Edit" asp-route-id="@bike.Id" class="btn btn-warning text-uppercase">Edit</a>
                            </div>
                        </td>
                        <td>
                            <div class="button-holder">
                                <a asp-controller="Bikes" asp-action="Delete" asp-route-id="@bike.Id" class="btn btn-danger text-uppercase">Delete</a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
