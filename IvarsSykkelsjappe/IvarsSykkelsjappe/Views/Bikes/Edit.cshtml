@model BikeDetailsViewModel
@{
    ViewData["Title"] = "Edit";
}
<section class="py-5">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h1 style="margin: 2%; text-align: center;">@Model.Brand (@Model.Model - @Model.Year)</h1>
        <div>
            <div class="form-group text-center">
                <img src="@Model.ImageUrl" class="img-fluid">
            </div>
            <div class="form-group">
                <label asp-for="Brand">Brand</label>
                <input asp-for="Brand"  class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Model">Model</label>
                <input asp-for="Model"  class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Price">Price</label>
                <input asp-for="Price"  class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Year">Year</label>
                <input asp-for="Year"  class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="BikeCategory">Category</label>
                <input asp-for="BikeCategory"  class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description"  class="form-control" rows="5"></textarea>
            </div>
            <div class="form-group text-center">
                <div class="button-holder">
                    <a href="/Bikes/AddUserToBike?bikeId=Id" class="btn btn-primary btn-block text-uppercase">Save Changes</a>
                </div>
            </div>
        </div>
    </div>
</section>
