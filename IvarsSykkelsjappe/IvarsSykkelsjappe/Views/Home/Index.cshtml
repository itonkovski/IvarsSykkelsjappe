@model List<BikeLatestIndexCarousel>
@{
    ViewData["Title"] = "Home Page";
}

@{
    var firstBike = Model.Any() ? Model[0] : null;
    var secondBike = Model.Count > 1 ? Model[1] : null;
    var thirdBike = Model.Count > 2 ? Model[2] : null;
}

<div class="text-center">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="jumbotron">
            <h1 class="display-4">Welcome, @User.Identity.Name</h1>
            <p class="lead">
                <a asp-controller="Bookings" asp-action="BookTime" type="submit" class="btn btn-primary btn-lg text-uppercase">Booking</a>
                <p>Make an appointment at our Workshop</p>
            </p>
            <hr class="my-4">
            <p>Check out the latest custom bikes</p>
            <p class="lead">
                <a asp-controller="Bikes" asp-action="AllCustomer" type="submit" class="btn btn-primary btn-lg text-uppercase">Our Bikes</a>
            </p>
        </div>
    }
    else
    {
        <div class="jumbotron">
            <h1 class="display-4">Welcome to Ivars Sykkelsjappe</h1>
            <p class="lead">
                <a asp-area="Identity" asp-page="/Account/Register" type="submit" class="btn btn-primary btn-lg text-uppercase">Register</a>
                <a asp-area="Identity" asp-page="/Account/Login" type="submit" class="btn btn-primary btn-lg text-uppercase">Login</a>
                <hr class="my-4">
                <p>Register or Login and make an appointment</p>
            </p>
        </div>
    }
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="@firstBike.ImageUrl" alt="@firstBike.Brand - @firstBike.Model">
            <div class="carousel-caption d-none d-md-block">
                <h5>@firstBike.Brand - @firstBike.Model</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="@secondBike.ImageUrl" alt="@secondBike.Brand - @secondBike.Model">
            <div class="carousel-caption d-none d-md-block">
                <h5>@secondBike.Brand - @secondBike.Model</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="@thirdBike.ImageUrl" alt="@thirdBike.Brand - @thirdBike.Model">
            <div class="carousel-caption d-none d-md-block">
                <h5>@thirdBike.Brand - @thirdBike.Model</h5>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
