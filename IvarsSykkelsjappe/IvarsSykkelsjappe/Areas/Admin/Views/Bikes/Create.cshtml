@model BikeFormModel
@{
    ViewData["Title"] = "Create a bike";
}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Create a custom bike</h2>
        <form method="post">
            <div class="form-group" enctype="multipart/form-data">
                <label asp-for="Brand"></label>
                <input asp-for="Brand" class="form-control" placeholder="Brand">
                <span asp-validation-for="Brand" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" placeholder="Model">
                <span asp-validation-for="Model" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Description"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Upload an image">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image"></label>
                <input asp-for="Image" type="file" multiple accept="image/gif, image/jpeg, image/png" class="form-control" />
                <span asp-validation-for="Image" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>
                <input asp-for="Year" class="form-control" placeholder="Year">
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="0.00">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BikeCategoryId">Select category</label>
                <select asp-for="BikeCategoryId" class="form-control">
                    <option value="">All</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.BikeCategoryId">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="BikeCategoryId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Agreements">
                <label asp-for="Agreements">I agree with the terms and conditions.</label>
                <span asp-validation-for="Agreements" class="small text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block text-uppercase">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}