@model IEnumerable<BikeViewModel>
@{
    ViewData["Title"] = "All available bikes:";
}
<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Our bikes are unique and made to individual order</h1>
        <div style="padding: 5%;">
            <table class="table">
                <thead class="thead-dark" align="center">
                    <tr>
                        <th scope="col">Brand</th>
                        <th scope="col">Model</th>
                        <th scope="col">Price</th>
                        <th scope="col">Year</th>
                        <th scope="col">Category</th>
                        <th scope="col">Details</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody align="center">
                    @foreach (var bike in Model)
                    {
                    <tr align="center">
                        <th scope="row">@bike.Brand</th>
                        <td>@bike.Model</td>
                        <td>@bike.Price</td>
                        <td>@bike.Year</td>
                        <td>@bike.BikeCategory</td>
                        <td>
                            <div class="button-holder">
                                <a asp-area="Admin" asp-controller="Bikes" asp-action="Details" asp-route-id="@bike.Id" class="btn btn-info text-uppercase">Info</a>
                            </div>
                        </td>
                        <td>
                            <div class="button-holder">
                                <a asp-area="Admin" asp-controller="Bikes" asp-action="Edit" asp-route-id="@bike.Id" class="btn btn-warning text-uppercase"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                            </div>
                        </td>
                        <td>
                            @*<div class="button-holder">
            <a asp-area="Admin" asp-controller="Bikes" asp-action="Delete" asp-route-id="@bike.Id" class="btn btn-danger text-uppercase"><i class="fa fa-trash" aria-hidden="true"></i></a>
        </div>*@
                            <form method="post" asp-area="Admin" asp-controller="Bikes" asp-action="Delete" id="deleteForm" asp-route-id="@bike.Id">
                            </form>
                            <button class="btn btn-danger text-uppercase" data-toggle="modal" data-target="#deleteModal">Delete</button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<div class="modal" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p>Do you want to delete this item?</p>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-danger" form="deleteForm">Yes</button>
                <button type="submit" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
