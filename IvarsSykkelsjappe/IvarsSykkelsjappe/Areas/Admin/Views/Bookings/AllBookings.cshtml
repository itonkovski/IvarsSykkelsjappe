@model IEnumerable<BookingViewModel>
@{
    ViewData["Title"] = "All available bookings:";
}
<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">All existing bookings</h1>
        <div style="padding: 5%;">
            <table class="table">
                <thead class="thead-dark" align="center">
                    <tr>
                        <th scope="col">Client Name</th>
                        <th scope="col">Time</th>
                        <th scope="col">Details</th>
                        <th scope="col">Mechanic Name</th>
                        @if (User.IsInRole("Mechanic"))
                        {
                            <th scope="col">Take Order</th>
                        }
                        else
                        {
                            <th scope="col">Delete</th>
                        }
                    </tr>
                </thead>
                <tbody align="center">
                    @foreach (var booking in Model)
                    {
                    <tr align="center">
                        <th scope="row">@booking.FullName</th>
                        <td>@booking.TimeSlot</td>
                        <td>
                            <div class="container">
                                <a class="btn btn-info text-uppercase" href="#" title="Details" data-toggle="popover" data-trigger="focus" data-content="@booking.Details">Info</a>
                            </div>
                        </td>
                        @if (booking.MechanicName == null)
                        {
                            <td><button type="button" class="btn btn-success" disabled>Available</button></td>
                        }
                        else
                        {
                            <td>@booking.MechanicName</td>
                        }
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            @*<div class="button-holder">
                                <a asp-area="Admin" asp-controller="Bookings" asp-action="Delete" asp-route-id="@booking.Id" class="btn btn-danger text-uppercase">Delete</a>
                            </div>*@
                            <form method="post" asp-area="Admin" asp-controller="Bookings" asp-action="Delete" id="deleteForm" asp-route-id="@booking.Id">                                
                            </form>
                            <button class="btn btn-danger text-uppercase" data-toggle="modal" data-target="#deleteModal">Delete</button>
                        }
                        else if (User.IsInRole("Mechanic"))
                        {
                            <div class="button-holder">
                                <form action="" method="post">
                                    <button type="submit" asp-controller="Bookings" asp-action="TakeOrder" asp-route-id="@booking.Id" class="btn btn-warning text-uppercase">Choose</button>
                                </form>
                            </div>
                        }

                    </td>
                        @*<td>
                        <div class="button-holder">
                            <a asp-controller="Bikes" asp-action="Details" asp-route-id="@bike.Id" class="btn btn-info text-uppercase">Info</a>
                        </div>
                        </td>
                        <td>
                            <div class="button-holder">
                                <a asp-controller="Bikes" asp-action="Edit" asp-route-id="@bike.Id" class="btn btn-warning text-uppercase">Edit</a>
                            </div>
                        </td>*@
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

@section Scripts {
    <script>$(document).ready(function () {
            $('[data-toggle="popover"]').popover();
        });</script>
}

<div class="modal" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p>Do you want to delete this item?</p>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-danger" form="deleteForm">Yes</button>
                <button type="submit" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
